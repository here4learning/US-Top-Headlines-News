<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>

        <item name="android:windowBackground">@color/color_background_color</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_primary_dark</item>

        <item name="colorControlNormal">@color/color_title</item>

        <item name="titleTextStyle">@style/Regular.Subheading</item>
        <item name="titleTextColor">@android:color/white</item>

        <item name="subtitleTextStyle">@style/Light.Body2</item>
        <item name="actionMenuTextColor">@color/color_title</item>
        <item name="android:textSize">@dimen/body_2_text_size</item>

        <item name="actionBarSize">75dip</item>

    </style>1

    <style name="CustomDialog" parent="@style/Theme.AppCompat.Light.Dialog.MinWidth">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowBackground">@color/color_primary</item>
    </style>

</resources>
